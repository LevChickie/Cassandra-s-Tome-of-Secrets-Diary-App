<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListEntriesActivity">
    <RelativeLayout
        android:id="@+id/layoutUpper"
        android:layout_height="600dp"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/newPasswordRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:text="Change password" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="683dp"
            android:text="Logout from Diary"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="294dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listOfEntriesRecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/newPasswordRequest"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutUnder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutUpper">
        <Button
            android:id="@+id/addNewEntryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="Add new Entry" />

        <Button
            android:id="@+id/DeleteAllButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:text="Delete all entries" />
    </RelativeLayout>


</RelativeLayout>